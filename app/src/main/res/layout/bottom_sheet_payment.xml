<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainGrey">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Methods"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Credit / Debit Card"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/credit_card"
        android:drawableEnd="@drawable/unchecked_radio"
        android:background="@drawable/btn_empty"
        app:layout_constraintBottom_toTopOf="@+id/two"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBank"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Online Banking"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/online_bank"
        android:drawableEnd="@drawable/unchecked_radio"
        android:background="@drawable/btn_empty"
        app:layout_constraintBottom_toTopOf="@+id/two"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGpay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="Google Pay"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/g_pay"
        android:drawableEnd="@drawable/unchecked_radio"
        android:background="@drawable/btn_empty"
        app:layout_constraintBottom_toTopOf="@+id/two"
        tools:layout_editor_absoluteX="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGcash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:text="GCash"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/gcash"
        android:drawableEnd="@drawable/unchecked_radio"
        android:background="@drawable/btn_empty"
        app:layout_constraintBottom_toTopOf="@+id/two"
        tools:layout_editor_absoluteX="10dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/priceinpayment"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:text="â‚± 0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMakePayment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_purple"
            android:text="Make Payment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>